@model IEnumerable<PrismaCatalogo.Web.Models.ProdutoViewModel>
@{
    ViewData["Title"] = "Home Page";
}


<div class="row">
    @foreach (var produto in Model.Where(p => p.Ativo).ToList())
    {
        <partial name="_ProdutoResumo" for="@produto" />
    }
    @if (Model.Count() == 0)
    {
        <div class="text-center">
            <h1 class="display-4">Nenhum produto registrado</h1>
        </div>
    }
</div>

