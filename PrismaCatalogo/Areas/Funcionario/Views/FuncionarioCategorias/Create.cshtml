@model PrismaCatalogo.Web.Models.CategoriaViewModel

@{
    ViewData["Title"] = "Create";
}

<div>
    <div>
        <h1 class="text-center">Categoria</h1>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="IdPai" class="control-label"></label>
                    <select asp-for="IdPai" class="form-control" asp-items="ViewBag.IdPai">
                        <option selected></option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Criar" class="btn btn-padrao" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center">
        <a asp-action="Index">Voltar para listagem</a>
    </div>
</div>