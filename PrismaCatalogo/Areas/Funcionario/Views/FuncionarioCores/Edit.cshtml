@model PrismaCatalogo.Web.Models.CorViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="flex-md-column">
    <div>
        <h1 class="text-center">Cor</h1>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="FotoBytes"/>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="d-flex flex-column form-group">
                    <div id="picker"></div>
                    <div>
                        <span asp-validation-for="CodigoHexadecimal" class="text-danger"></span>
                        <input asp-for="CodigoHexadecimal" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="FotoBytes" class="control-label"></label>
                    <input type="file" name="file" class="form-control" />
                    <span asp-validation-for="FotoBytes" class="text-danger"></span>
                </div>
                
                <div class="form-group text-center">
                    <input type="submit" value="Editar" class="btn btn-padrao" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center">
        <a asp-action="Index">Voltar para listagem</a>
    </div>
</div>

<script type="text/javascript">
   
    $(document).ready(function () {
        colorPicker.color.hexString = hexInput.value;
    });

    var colorPicker = new iro.ColorPicker('#picker', {
        width: 130,
        borderWidth: 1,
        borderColor: "#2a2b2b"
    });
    var hexInput = document.getElementById("CodigoHexadecimal");

    colorPicker.on( "color:change", function (color) {
        hexInput.value = color.hexString;
    });

    hexInput.addEventListener('change', function () {
        colorPicker.color.hexString = this.value;
    });
</script>