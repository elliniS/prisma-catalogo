@model IEnumerable<PrismaCatalogo.Web.Models.CorViewModel>

@{
    ViewData["Title"] = "Index";
}

<div>
    <div>
        <h1 class="text-center">Cores</h1>
    </div>

    <p class="text-end">
        <button type="button" class="btn btn-padrao"><a class="cor" asp-action="Create">Novo +</a></button>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    Cor
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                        @if (@item.FotoBytes == null){
                            <div class="color-view rounded-circle" style="background-color: @Html.DisplayFor(modelItem => item.CodigoHexadecimal)"></div>
                        }
                        else
                        {
                            <div class="color-view rounded-circle" style="background-image: url('data:image/png;base64,@Html.DisplayFor(modelItem => item.FotoBytes)')"></div>
                        }
                </td>
                <td class="text-end">
                    <a class="cor-primaria" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-fill"></i></a> |
                    <a class="cor-primaria" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye-fill"></i></a> |
                    <a class="cor-primaria" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash-fill"></i></a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>